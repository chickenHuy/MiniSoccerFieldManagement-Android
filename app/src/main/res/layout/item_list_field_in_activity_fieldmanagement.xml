<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_white_radius_10dp"
        android:backgroundTint="#F9F9FB"
        android:elevation="2dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_green_radius_10dp"
            android:gravity="center"
            android:orientation="vertical">


           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvIdField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#03212"
                    android:textColor="#3F3F3F"
                    android:gravity="center"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvNameField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Normal Field 1"
                android:textColor="#001C33"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <LinearLayout
                style="@style/width_mp_height_wc"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:gravity="end"
                >

                <TextView
                    style="@style/width_wc_height_wc"
                    android:text="Status: "
                    android:textColor="#7A7A7A"
                    android:textSize="17sp" />


                <TextView
                    style="@style/width_wc_height_wc"
                    android:id="@+id/tvStatusField"
                    android:text="Activate"
                    android:textColor="@color/primaryColor"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_chevron_right" />

    </LinearLayout>

</LinearLayout>

