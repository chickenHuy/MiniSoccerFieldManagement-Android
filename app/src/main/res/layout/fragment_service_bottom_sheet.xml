<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/width_mp_height_wc">

    <LinearLayout
        style="@style/width_mp_height_wc"
        android:background="@drawable/background_radius_top_27dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="30dp"
        android:paddingEnd="25dp">

        <TextView
            style="@style/width_mp_height_wc"
            android:text="Service name"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            style="@style/width_mp_height_wc"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/width_wc_height_wc"
                android:text="@string/unit"
                android:textColor="@color/blackGray"
                android:textSize="16sp" />

            <TextView
                style="@style/width_wc_height_wc"
                android:text=": "
                android:textColor="@color/blackGray"
                android:textSize="16sp" />

            <TextView
                style="@style/width_wc_height_wc"
                android:text="Unit of service"
                android:textColor="@color/blackGray"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/width_mp_height_wc"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price of service"
                android:textColor="@color/primaryColor"
                android:textSize="22sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_subtraction"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_circular_50_percent"
                android:backgroundTint="@color/primaryColor"
                android:drawableStart="@drawable/ic_subtraction"
                android:paddingStart="8dp" />

            <EditText
                android:id="@+id/edit_text_quantity"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:maxLength="5"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_addition"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/background_circular_50_percent"
                android:backgroundTint="@color/primaryColor"
                android:drawableStart="@drawable/ic_addition"
                android:paddingStart="8dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/background_circular_50_percent"
            android:backgroundTint="@color/primaryColor"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>