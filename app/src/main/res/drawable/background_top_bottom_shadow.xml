<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/black"
                android:type="linear" />
            <size
                android:width="200dp"
                android:height="50dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:top="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="@color/white"
                android:startColor="@color/blackGray"
                android:type="linear" />
            <size
                android:width="200dp"
                android:height="50dp" />
        </shape>
    </item>
</layer-list>