<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/blackGray</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
    </style>

    <style name="width_mp_height_wc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="width_mp_height_mp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="width_wc_height_wc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_custom" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_input_layout_custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="cursorColor">@color/primaryColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>

    <style name="header_text_custom" parent="width_wc_height_wc">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="content_text_custom" parent="width_wc_height_wc">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="radio_button_custom" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="buttonTint">@color/primaryColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_menu_custom" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_menu_item</item>
        <item name="itemTextColor">@color/primaryColor</item>
        <item name="itemRippleColor">@color/rippleColor</item>
    </style>

    <style name="Widget.Theme.MiniSoccerFieldManagement.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="item_view_pager_corner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="button_in_fragment_home_custom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/blackGray</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:background">@drawable/background_border_1dp_radius_10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>